
---
import { Image } from 'astro:assets';
import type { Project } from '../pages/projects/projects'
import { kFormatter } from '../utils'
import GithubWhite from '@src/assets/img/github-mark-white.svg';
import GithubBlack from '@src/assets/img/github-mark.svg';

interface Props {
  projects: Project[];
}

const { projects } = Astro.props
---
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {
    projects.map((project) =>  
      <div class="group relative bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-2xl p-6 hover:border-zinc-400 dark:hover:border-zinc-600 transition-colors duration-300 flex flex-col h-full">
        <div class="flex justify-between items-start mb-4">
          <div class="flex flex-wrap gap-2">
            {
              (project.tags || [] )?.map((tag: string) => (
                <span class="px-2.5 py-1 rounded-md bg-zinc-100 dark:bg-zinc-800 text-xs font-medium text-zinc-600 dark:text-zinc-400 border border-zinc-200 dark:border-zinc-700">
                  {tag}
                </span>
              ))
            }
          </div>
          {project.stargazers_count !== undefined && (
            <a href={project.html_url} target="_blank" class="flex items-center gap-1.5 text-xs font-medium text-zinc-600 dark:text-zinc-400 hover:text-zinc-900 dark:hover:text-zinc-200 transition-colors">
              <Image src={GithubBlack} height={14} class='dark:hidden w-3.5 h-3.5' alt='Github stars' />
              <Image src={GithubWhite} height={14} class='hidden dark:block w-3.5 h-3.5' alt='Github stars' />
              {kFormatter(project.stargazers_count)}
            </a>
          )}
        </div>
        
        <h3 class="text-xl font-bold text-zinc-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
          <a href={project.demoLink} target="_blank" rel={project.demoLinkRel}>
            {project.name}
            <span class="absolute inset-0"></span>
          </a>
        </h3>
        
        <p class="text-zinc-600 dark:text-zinc-400 text-sm leading-relaxed mb-6 flex-grow line-clamp-3">
          {project.description}
        </p>

        <div class="flex items-center gap-4 mt-auto relative z-10">
          {project.postLink && (
            <a href={project.postLink} class="text-sm font-medium text-zinc-600 dark:text-zinc-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors flex items-center gap-1">
              Read Article
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </a>
          )}
          {project.demoLink && (
            <a href={project.demoLink} target="_blank" rel={project.demoLinkRel} class="text-sm font-medium text-zinc-600 dark:text-zinc-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors flex items-center gap-1">
              View Demo
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
            </a>
          )}
        </div>
      </div>
    )
  }
</div>
