---
import { SITE_TITLE, SITE_TAGLINE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';
import { projects } from './projects/projects';
import ProjectList from '../components/ProjectList.astro'
import PostItem from '../components/PostItem.astro';
import Hero from '../components/Hero.astro';

type BlogPost = CollectionEntry<'blog'>;

const top6Projects = projects.slice(0, 6);
const posts = (await getCollection('blog')).sort((a: BlogPost, b: BlogPost) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 5);
---

<BaseLayout title={SITE_TITLE + ' - ' + SITE_TAGLINE} description={SITE_DESCRIPTION}>
	<Hero />
	<div class='container mx-auto px-4 py-12'>
		<main>
      <div class='mb-20'>
        <div class="flex justify-between items-end gap-4 mb-8 border-b border-zinc-200 dark:border-zinc-800 pb-4">
          <h2 class="text-3xl font-bold text-zinc-900 dark:text-white">Recent Posts</h2>
          <a href="/posts/" class="text-blue-600 dark:text-blue-400 font-medium hover:underline flex items-center gap-1">
            All posts 
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </a>
        </div>
        <div class="grid gap-8">
          {
            posts.map((post: BlogPost) => (
              <PostItem post={post} />
            ))
          }      
        </div>
      </div>
      
      <div id="projects" class="scroll-mt-24">
        <div class="flex justify-between items-end gap-4 mb-8 border-b border-zinc-200 dark:border-zinc-800 pb-4">
          <h2 class="text-3xl font-bold text-zinc-900 dark:text-white">Featured Projects</h2>
          <a href="/projects/" class="text-blue-600 dark:text-blue-400 font-medium hover:underline flex items-center gap-1">
            All projects 
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </a>
        </div>
        <ProjectList projects={top6Projects}/>
      </div>
		</main>
	</div>
</BaseLayout>
  